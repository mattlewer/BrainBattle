<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewTopThree"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="0dp"
    card_view:cardElevation="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/topThreePointsPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:elevation="0dp"
            android:layout_gravity="center"
            android:id="@+id/topThreeCardUserCardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:strokeWidth="4dp">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:id="@+id/topThreeCardUserCardViewImage"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/topThreePointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="TextView"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/topThreeCardUserInitials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
