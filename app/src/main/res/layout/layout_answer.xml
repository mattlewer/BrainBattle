<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">


    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/whoAnsweredTabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/answeredTab1"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab2"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
           />
        <View
            android:id="@+id/answeredTab3"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab4"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab5"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab6"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab7"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab8"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab9"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />
        <View
            android:id="@+id/answeredTab10"
            android:layout_marginRight="3dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardElevation="0dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/whoAnsweredTabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/answerCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_secondary_bg">

            <TextView
                android:id="@+id/answerText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>